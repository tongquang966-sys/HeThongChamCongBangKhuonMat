@model WebApp.Models.NhanVien
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm nhân viên</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Them" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Họ và tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Chức vụ</label>
        <input asp-for="ChucVu" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ảnh nhân viên</label>
        <input type="file" name="AnhNhanVien" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Lưu</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
